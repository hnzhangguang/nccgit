<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <include layout="@layout/activity_commob_titlebar"></include>

    <!--    <TextView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="@dimen/dp_1"-->
    <!--        android:background="@color/colorPrimaryDark"></TextView>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/setting_bg_textview"
        android:orientation="vertical">


        <!--    IP -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:text="IP地址:"></TextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/net_ip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:singleLine="true"
                android:background="@color/setting_bg_textview"
                android:hint="请输入IP地址"
                android:textSize="@dimen/dp_16">

            </androidx.appcompat.widget.AppCompatEditText>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/line_color"></TextView>

        <!--    PORT -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:text="端口    :"></TextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/net_port"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:singleLine="true"
                android:background="@color/setting_bg_textview"
                android:hint="请输入端口"
                android:textSize="@dimen/dp_16">

            </androidx.appcompat.widget.AppCompatEditText>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/line_color"></TextView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <Button
            android:id="@+id/net_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_orange_selector"
            android:gravity="center"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:text="保存"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_normal"></Button>

    </LinearLayout>
</LinearLayout>
