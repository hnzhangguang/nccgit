<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activity_commob_titlebar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/dp_50"
            android:text="NC Cloud"
            android:textColor="@color/red_"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/dp_10"
            android:text="手机号绑定"
            android:textSize="32sp" />


        <TextView
            android:id="@+id/tv_sendPhoneTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/dp_10"
            android:text="手机验证码已发送至150****1122"></TextView>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:singleLine="true"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/margin_large"
            android:background="@color/gray" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_checkPhone"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:text="" />


            <Button
                android:id="@+id/phoneCheckCode"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_15"
                android:text="手机验证码"></Button>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/margin_large"
            android:background="@color/gray" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_imgCode"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:text="" />

            <ImageView
                android:id="@+id/imgCheckCode"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/margin_large"
            android:background="@color/gray" />


        <Button
            android:id="@+id/btn_bding_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginRight="@dimen/margin_large"
            android:background="@drawable/btn_orange_selector"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:text="绑定"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_normal" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
